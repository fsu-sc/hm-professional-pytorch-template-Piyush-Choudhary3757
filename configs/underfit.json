{
    "name": "underfit_function_approximation",
    "n_gpu": 1,
    "arch": {
        "type": "DynamicModel",
        "args": {
            "num_hidden_layers": 1,
            "hidden_sizes": [8],
            "hidden_activation": "tanh",
            "output_activation": "linear"
        }
    },
    "data_loader": {
        "type": "FunctionDataLoader",
        "args": {
            "data_dir": "data/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "function": "harmonic",
            "n_samples": 2000
        }
    },
    "optimizer": {
        "type": "SGD",
        "args": {
            "lr": 0.0001,
            "momentum": 0.9
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "mae_loss",
        "r2_score",
        "explained_variance"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 30,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 50,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}