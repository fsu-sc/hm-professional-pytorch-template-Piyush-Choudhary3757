{
    "name": "overfit_function_approximation",
    "n_gpu": 1,
    "arch": {
        "type": "DynamicModel",
        "args": {
            "num_hidden_layers": 5,
            "hidden_sizes": [128, 128, 64, 64, 32],
            "hidden_activation": "relu",
            "output_activation": "linear"
        }
    },
    "data_loader": {
        "type": "FunctionDataLoader",
        "args": {
            "data_dir": "data/",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 2,
            "function": "harmonic",
            "n_samples": 100
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.01,
            "weight_decay": 0
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "mae_loss",
        "r2_score",
        "explained_variance"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 100,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 500,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 50,
        "tensorboard": true
    }
}